---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../api/proyectos.json';

export function getStaticPaths() {
  return projects.map(project => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<Layout title={`Proyecto ${project.id} - ${project.title}`}>
  <main>
    <h1>{project.title}</h1>
    <img src={project.image} alt={project.title} />
    <p>{project.description}</p>
    <h2>Tecnolog√≠as utilizadas:</h2>
    <ul>
      {project.technologies.map((tech) => (
        <li>{tech}</li>
      ))}
    </ul>
    <div class="buttons">
      <a href={project.demoUrl} target="_blank" rel="noopener noreferrer" class="btn">Ver Demo</a>
      <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="btn">Ver en GitHub</a>
    </div>
    <a href="/" class="back-link">Volver al portafolio</a>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  h1 {
    font-size: 2.5rem;
    color: var(--color-principal);
    margin-bottom: 1rem;
  }
  img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 1rem;
  }
  p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  h2 {
    font-size: 1.5rem;
    color: var(--color-principal);
    margin-top: 2rem;
    margin-bottom: 0.5rem;
  }
  ul {
    list-style-type: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }
  li {
    background: var(--color-principal);
    color: var(--color-principal);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
  }
  .buttons {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  .btn {
    display: inline-block;
    background: var(--color-principal);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }
  .btn:hover {
    background: var(--color-principal);
  }
  .back-link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-principal);
    text-decoration: none;
  }
  .back-link:hover {
    text-decoration: underline;
  }
</style>

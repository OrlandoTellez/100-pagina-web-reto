---
import Layout from '../../layouts/Layout.astro';

interface Params {
  id: string;
}

const params = Astro.params as Params; 
const response = await fetch(`http://localhost:4321/api/proyectos.json`);
const proyectos = await response.json();

if (!params.id) {
  throw new Error("El ID del proyecto no está disponible.");
}

const project = proyectos.find((p) => p.id === params.id);

export async function getStaticPaths() {
  const proyectos = await fetch(`http://localhost:4321/api/proyectos.json`).then((res) => res.json());
  const paths = proyectos.map((project) => ({ params: { id: project.id } }));
  return paths;
}

---

<Layout title={`Proyecto ${project.id} - ${project.title}`}>
  <main>
    <h1>{project.title}</h1>
    <img src={project.image} alt={project.title} />
    <p>{project.description}</p>
    <h2>Tecnologías utilizadas:</h2>
    <ul>
      {project.technologies.map((tech) => (
        <li>{tech}</li>
      ))}
    </ul>
    <div class="buttons">
      <a href={project.demoUrl} target="_blank" rel="noopener noreferrer" class="btn">Ver Demo</a>
      <a href={project.githubUrl} target="_blank" rel="noopener noreferrer" class="btn">Ver en GitHub</a>
    </div>
    <a href="/" class="back-link">Volver al portafolio</a>
  </main>
</Layout>


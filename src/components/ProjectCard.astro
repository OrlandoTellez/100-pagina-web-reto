---
interface Props {
	title: string;
	description: string;
	image: string;
	tecnologias: string[];
	url: string;
}

const { title, description, image, tecnologias, url } = Astro.props;
---

<div class="project-card">
	<img src={image} alt={title} />
	<div class="content">
		<h3>{title}</h3>
		<p>{description}</p>
		<ul>
			{
				tecnologias.map(tecnologia => (
					<li>{tecnologia}</li>
				))
			}
		</ul>
		<a href={url}  class="btn">Ver m√°s</a>
	</div>
</div>

<style>
	.project-card {
		background: white;
		border-radius: 8px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}
	.project-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
	}
	img {
		width: 100%;
		
	}
	.content {
		padding: 1rem;
	}
	h3 {
		margin: 0 0 0.5rem;
		color: var(--color-principal);
	}
	p {
		margin: 0 0 1rem;
		font-size: 0.9rem;
	}
	.btn {
		display: inline-block;
		background: var(--color-principal);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		text-decoration: none;
		transition: background-color 0.3s ease;
	}
	.btn:hover {
		background: #6a29ba;
	}

	ul{
		display: flex;
		margin-bottom: 20px;
		gap: 20px;
	}
</style>
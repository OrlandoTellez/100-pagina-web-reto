---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portafolio de proyectos web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-principal: #883aea;
		--accent-light: #883aea;
		--accent-dark: #883aea;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--color-principal)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	li{
		list-style: none;
	}

	a{
		text-decoration: none;
		color: black;
	}

	html {
		font-family: system-ui, sans-serif;
		background: #f6f6f6;
		color: #333;
	}
	body {
		margin: 0;
		padding: 0;
	}
	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}
</style>